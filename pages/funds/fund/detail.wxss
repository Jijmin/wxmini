page {
  background: #efefef;
}

.container {
  position: relative;
  display: flex;
  flex-direction: column;
  width: 100%;
  overflow: hidden;
}

.fund-chart {
  height: 580rpx;
  width: 100%;
  background: #fff;
}

.fund-tab {
  height: 40rpx;
  padding: 34rpx 0;
  background: #405f80;
  flex-direction: row;
  text-align: center;
}

.fund-tab text {
  color: #c1d7fb;
  padding: 0 25rpx;
  border-right: 1px solid #c1d7fb;
}

.fund-update-time {
  position: absolute;
  right: 0;
  top: 34rpx;
  display: flex;
  flex-direction: column;
  text-align: right;
}

.fund-update-time text {
  color: #c1d7fb;
}

.fund-tabs {
  display: flex;
  flex-direction: row;
  text-align: center;
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 34rpx 0 26rpx;
}

.fund-tabs view {
  display: flex;
  flex-direction: column;
  text-align: center;
  margin: 0 auto;
  padding: 0 59rpx;
}

.fund-tabs-line {
  padding: 6rpx 0;
  font-size: 40rpx;
}

.fund-tabs-unit-num {
  color: #0c0c0c;
  font-size: 24rpx;
}

.fund-tabs-change-num {
  color: #27b920;
}

.fund-tabs-year-num {
  color: #ff655b;
}

.fund-tabs-text {
  color: #adadad;
  font-size: 24rpx;
}

.fund-chart-title {
  width: 100%;
  height: 62rpx;
  padding: 0 34rpx 40rpx 0;
}

.fund-chart-title-text {
  float: left;
  text-align: left;
  margin-top: 36rpx;
  color: #8d8d8d;
  margin-left: 30rpx;
}

.fund-chart-title-history {
  float: right;
  margin-top: 36rpx;
  margin-right: 30rpx;
  text-align: right;
  color: #5893f5;
}
canvas{
  margin: 0 30rpx;
}
.fund-chart-tab{
  text-align: center;
  padding: 14rpx 0;
  margin: 30rpx 40rpx 0;
  border: 1px solid #d6d6d6;
}
.fund-chart-tab text{
  padding: 0 40rpx;
}
.fund-chart-item{
  border-right: 1px solid #d6d6d6;
}
.fund-menu{
  text-align: center;
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #d6d6d6;
}
.fund-menu text{
  flex: 1;
  padding: 24rpx 0;
  font-size: 28rpx;
  font-weight: bold;
}
.fund-menu-item{
  color: #585858;
}
.active{
  color: #4285f4;
}
.fund-menu-active{
  border-bottom: 2px solid #4285f4;
  color: #4285f4;
}
.fund-fljg{
  background: #fff;
  padding: 26rpx;
}
.fund-fljg-title-line{
  border-right: 10rpx solid #4285f4;
  margin-right: 12rpx;
  font-size: 34rpx;
  line-height: 58rpx;
}
.fund-fljg-title-text{
  font-size: 28rpx;
  color: #adadad;
  font-weight: bold;
  line-height: 58rpx;
}
.fund-fljg-table-line{
  border-top: 1px solid #d6d6d6;
}
.fund-fljg-table-item{
  border-left: 1px solid #d6d6d6;
  border-right: 1px solid #d6d6d6;
  padding: 26rpx;
  overflow: hidden;
  border-bottom: 1px solid #d6d6d6;
}
.fund-fljg-table-item text{
  line-height: 42rpx;
  font-size: 30rpx;
}
.fund-fljg-table-left{
  float: left;
  text-align: left;
}
.fund-fljg-table-right{
  float: right;
  text-align: right;
}
.fund-fljg-table-code{
  color: #b3b3b3;
  font-size: 24rpx;
}
.fund-zcpz-box{
  position: relative;
}
.fund-fljg-title-time{
  position: absolute;
  right: 0;
  top: 40rpx;
  margin-right: 20rpx;
  color: #adadad;
}
.fund-jjjl{
  flex-direction: row;
  margin-bottom: 60rpx;
}
.fund-jjjl-image{
  width: 89rpx;
  height: 88rpx;
  vertical-align: middle;
  margin-right: 14rpx;
}
.fund-jjjl-name{
  font-size: 36rpx;
  color: #585858;
  vertical-align: middle;
}
.fund-jjjl-desc{
  letter-spacing: 4rpx;
  color: #585858;
}