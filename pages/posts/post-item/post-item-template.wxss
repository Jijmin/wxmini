.post-container {
  display: flex;
  flex-direction: column;
  margin: 20rpx 0 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  border-top: 1px solid #ededed;
  padding-bottom: 5px;
}
.post-author-date{
  margin: 10rpx 0 20rpx 10px;
}
.post-author{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.post-date{
  margin-left: 20px;
  vertical-align: middle;
}
.post-title{
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin: 0 0 10px 10px;
}
.post-image{
  width: 100%;
  height: 340rpx;
  margin: auto 0 15px 0;
}
.post-content{
  color: #666;
  font-size: 28rpx;
  margin: 0 0 20rpx 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}
.post-like{
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
}
.post-like-image{
  width: 16rpx;
  height: 16rpx;
  margin-right: 8px;
  vertical-align: middle;
}
.post-like-font{
  vertical-align: middle;
  margin-right: 20px;
}